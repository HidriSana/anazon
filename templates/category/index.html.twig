{% extends 'base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	<div>
		<div>
			<h1 class="display-2 text-center text-white fw-bold">Liste des catégories</h1>
			{% for category in categories %}
				<h2 class="list-group mb-1">
					<a href="{{path('app_category_show_by_id', {id: category.id})}}" class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover list-group-item list-group-item-action list-group-item-light list-group-item d-flex justify-content-between align-items-center">{{category.name}}
						{% if category.parent %}
							<span class="badge bg-primary rounded-pill">Sous-catégorie de
								{{category.parent.name}}</span>
						{% endif %}
					</a>
				</h2>

			{% endfor %}
		</div>
		<a href="{{path('add_category')}}" class="btn btn-success">Ajouter une catégorie</a>
	</div>
{% endblock %}
